using System;
using System.Collections.Generic;

namespace LibraryLib
{
    public class LibraryFunctions
    {
        private static readonly string libraryName = "Городская библиотека г. Чита";
        private static string chiefLibrarian = "Иванова Мария Петровна";
        private static List<string> staff = new List<string>
        {
            "Петров П.С.",
            "Сидорова А.В.",
            "Козлов И.Д.",
            "Иванова М.П."
        };
        public string GetChiefLibrarian()
        {
            return chiefLibrarian;
        }
        public string GetLibraryName()
        {
            return libraryName;
        }

        
        public bool SetChiefLibrarian(string fullname)
        {
            if (staff.Contains(fullname))
            {
                chiefLibrarian = fullname;
                return true; 
            }
            return false;
        }
        public string GenerateBookCode(string category)
        {
            Random rnd = new Random();
            int number = rnd.Next(1000, 10000); 
            return category.ToUpper() + "_" + number;
        }
        public List<string> GetStaff()
        {
           
            return new List<string>(staff);
        }
        public void AddStaff(string fullname)
        {
            staff.Add(fullname);
        }
    }
}
